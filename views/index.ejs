    <section id="contact-me-section">
        <div class="container">
           <div class="row">
               <div class="col-md-12">

                    <% if (typeof recap != 'undefined') { %>
                    <%= recap %>
                    <input id="recaptcha" value="<%= recap %>" hidden></input>
                    <% } %>

                   <p> Please fill this form out and contact me should you have any questions, concerns, project ideas, job offers, or simply to say 'Hi!' </p>
               </div>
           </div>
            <div class="row">
              <form  action="/send" name="messageform" method="POST" id="message_form">
                    <div class="col-md-6">
                       <input type="text" name="first_name" id="first_name" class="input-contact" placeholder="Name" required="">
                       <input type="email" name="email" class="input-contact" id="email" placeholder="E-mail" required="">
                       <input type="text" name="subject" id="subject" class="input-contact" placeholder="Subject" required="">
                    </div>
                    <div class="col-md-6">
                      <textarea name="message" id="message" class="input-contact" placeholder="Message" cols="30" rows="7" required=""></textarea>
                      <div class="g-recaptcha" data-sitekey="6LcBKYoUAAAAALbvQfU-F4ZCkESW0OX4SnAkhT2d" data-callback="enableBtn"></div>
                      <button type="submit" value="Submit" name="submit" id="submit" class="btn submit-contact"><i class="fas fa-envelope"></i>SUBMIT</button>
                    </div>
